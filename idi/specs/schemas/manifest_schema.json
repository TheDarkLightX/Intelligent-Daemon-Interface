{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "IDI Artifact Manifest Schema",
  "description": "Schema for artifact manifests with stream hashes",
  "type": "object",
  "required": ["schema_version", "streams"],
  "properties": {
    "schema_version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Schema version (semver)"
    },
    "streams": {
      "type": "object",
      "description": "Map of stream names to SHA-256 hashes",
      "additionalProperties": {
        "type": "string",
        "pattern": "^[0-9a-f]{64}$",
        "description": "SHA-256 hash (hex)"
      }
    },
    "config_hash": {
      "type": "string",
      "pattern": "^[0-9a-f]{64}$",
      "description": "SHA-256 hash of training config"
    },
    "training_metadata": {
      "type": "object",
      "properties": {
        "seed": {
          "type": "integer",
          "description": "Random seed used"
        },
        "episodes": {
          "type": "integer",
          "description": "Number of episodes trained"
        },
        "timestamp": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 timestamp"
        }
      },
      "additionalProperties": false
    },
    "proof_policy": {
      "type": "object",
      "properties": {
        "prover": {
          "type": "string",
          "enum": ["stub", "risc0", "ezkl"],
          "description": "Proof generation method"
        },
        "require_proof": {
          "type": "boolean",
          "default": false,
          "description": "Whether proof is required before use"
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}

