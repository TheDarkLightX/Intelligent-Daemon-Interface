{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "IDI Trace Schema",
  "description": "Schema for Tau-ready trace ticks with episode-level tracing metadata",
  "type": "object",
  "required": ["metadata", "ticks"],
  "properties": {
    "metadata": {
      "type": "object",
      "required": ["episode_id", "policy_id", "env_id", "data_version"],
      "properties": {
        "episode_id": {
          "type": "string",
          "description": "Unique identifier for this episode/trace"
        },
        "policy_id": {
          "type": "string",
          "description": "Identifier for the policy that generated this trace"
        },
        "env_id": {
          "type": "string",
          "description": "Identifier for the environment used"
        },
        "data_version": {
          "type": "string",
          "description": "Version of the trace format"
        },
        "seed": {
          "type": "integer",
          "description": "RNG seed used for reproducibility"
        },
        "config_hash": {
          "type": "string",
          "description": "Hash of the training configuration"
        },
        "timestamp": {
          "type": "string",
          "format": "date-time",
          "description": "UTC timestamp of trace generation"
        }
      },
      "additionalProperties": false
    },
    "ticks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["step_id", "q_buy", "q_sell", "risk_budget_ok", "q_emote_positive", "q_emote_alert", "q_regime"],
        "properties": {
          "step_id": {
            "type": "integer",
            "minimum": 0,
            "description": "Step index within the episode"
          },
          "q_buy": {
            "type": "integer",
            "minimum": 0,
            "maximum": 1,
            "description": "Buy signal (0 or 1)"
          },
          "q_sell": {
            "type": "integer",
            "minimum": 0,
            "maximum": 1,
            "description": "Sell signal (0 or 1)"
          },
          "risk_budget_ok": {
            "type": "integer",
            "minimum": 0,
            "maximum": 1,
            "description": "Risk budget cleared flag"
          },
          "q_emote_positive": {
            "type": "integer",
            "minimum": 0,
            "maximum": 1,
            "description": "Positive emotion cue"
          },
          "q_emote_alert": {
            "type": "integer",
            "minimum": 0,
            "maximum": 1,
            "description": "Alert emotion cue"
          },
          "q_emote_persistence": {
            "type": "integer",
            "minimum": 0,
            "maximum": 1,
            "description": "Emotion persistence flag"
          },
          "q_regime": {
            "type": "integer",
            "minimum": 0,
            "maximum": 31,
            "description": "Regime identifier (bv[5])"
          },
          "price_up": {
            "type": "integer",
            "minimum": 0,
            "maximum": 1,
            "description": "Price increased"
          },
          "price_down": {
            "type": "integer",
            "minimum": 0,
            "maximum": 1,
            "description": "Price decreased"
          },
          "weight_momentum": {
            "type": "integer",
            "minimum": 0,
            "maximum": 1,
            "description": "Momentum layer weight"
          },
          "weight_contra": {
            "type": "integer",
            "minimum": 0,
            "maximum": 1,
            "description": "Contrarian layer weight"
          },
          "weight_trend": {
            "type": "integer",
            "minimum": 0,
            "maximum": 1,
            "description": "Trend layer weight"
          },
          "risk_event": {
            "type": "integer",
            "minimum": 0,
            "maximum": 1,
            "description": "Risk event flag"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
